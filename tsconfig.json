{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["DOM", "ESNext"],
		"jsx": "react-jsx",
		"module": "ESNext",
		"moduleResolution": "Node",
		"allowJs": true, // Allow JS files alongside TS
		"checkJs": false, // Do not check JS files for type errors
		"strict": true, // Enable strict type checking
		"isolatedModules": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["resources/js/*"]
		}
	},
	"include": ["src", "resources/js"]
}
